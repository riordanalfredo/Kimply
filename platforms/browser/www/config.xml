<?xml version='1.0' encoding='utf-8'?>
<widget id="com.kimply.color" version="1.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Kimply: Color Game</name>
    <description>
        Simple game with color
    </description>
    <author email="riordan.alfredo@gmail.com" href="https://au.linkedin.com/in/riordan-dervin-alfredo-099634118">
        Alfredo
    </author>
    <gap:plugin name="phonegap-admob" source="npm" />
    <icon src="img/logo.png" />
    <icon gap:platform="android" gap:qualifier="ldpi" src="www/img/logo.png" />
    <icon gap:platform="android" gap:qualifier="mdpi" src="www/img/logo.png" />
    <icon gap:platform="android" gap:qualifier="hdpi" src="www/img/logo.png" />
    <icon gap:platform="android" gap:qualifier="xhdpi" src="www/img/logo.png" />
    <icon gap:platform="blackberry" src="www/img/logo.png" />
    <icon gap:platform="blackberry" gap:state="hover" src="www/img/logo.png" />
    <icon gap:platform="ios" height="57" src="www/img/logo.png" width="57" />
    <icon gap:platform="ios" height="72" src="www/img/logo.png" width="72" />
    <icon gap:platform="ios" height="114" src="www/img/logo.png" width="114" />
    <icon gap:platform="ios" height="144" src="www/img/logo.png" width="144" />
    <icon gap:platform="webos" src="www/img/logo.png" />
    <icon gap:platform="winphone" src="www/img/logo.png" />
    <icon gap:platform="winphone" gap:role="background" src="www/img/logo.png" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="permissions" value="none" />
    <preference name="orientation" value="default" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="disable-cursor" value="false" />
    <preference name="android-installLocation" value="auto" />
</widget>
